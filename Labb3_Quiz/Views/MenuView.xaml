<UserControl x:Class="Labb3_Quiz.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Labb3_Quiz.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
             
    <Menu>
        <MenuItem Header="_File">
            <MenuItem 
                Header="_New Question Pack" 
                Icon="{fa:Icon FolderPlus}" 
                Command="{Binding OpenCreateNewPackDialogCommand}"
                IsEnabled="{Binding IsEditMode}"
                />
            
            <MenuItem 
                Header="_Select Question Pack" 
                Icon="{fa:Icon FolderOpen}"
                ItemsSource="{Binding Packs}"
                IsEnabled="{Binding IsEditMode}">
                <MenuItem.ItemContainerStyle>
                <Style TargetType="MenuItem">
                    <Setter 
                        Property="Header" 
                        Value="{Binding Name}"
                        />
                    <Setter 
                        Property="Command" 
                        Value="{Binding DataContext.SelectPackCommand,
                        RelativeSource={RelativeSource AncestorType=Menu}}"/>
                    <Setter Property="CommandParameter" Value="{Binding}"/>
                </Style>
            </MenuItem.ItemContainerStyle>
            </MenuItem>
            
            <MenuItem 
                Header="_Delete Question Pack" 
                Icon="{fa:Icon FolderMinus}"
                Command="{Binding DeletePackCommand}"
                />
            <MenuItem 
                Header="_Import Questions" 
                Command="{Binding ImportQuestionsCommand}"
                Icon="{fa:Icon CloudArrowDown}" 
                InputGestureText="Ctrl+I"
                IsEnabled="{Binding IsEditMode}"
                />
            <Separator />
            <MenuItem 
                Header="E_xit" 
                Command="{Binding ExitProgramCommand}"
                Icon="{fa:Icon DoorOpen}" 
                InputGestureText="Alt+F4" />
        </MenuItem>
        <MenuItem Header="_Edit">
            <MenuItem 
                Header="Ad_d Question" 
                Command="{Binding ConfigurationViewModel.AddQuestionCommand}"
                Icon="{fa:Icon Plus}"
                InputGestureText="Insert" 
                IsEnabled="{Binding IsEditMode}"
                />
            <MenuItem 
                Header="R_emove Question" 
                Command="{Binding ConfigurationViewModel.RemoveQuestionCommand}"
                Icon="{fa:Icon Minus}" 
                InputGestureText="Delete"
                IsEnabled="{Binding IsEditMode}"
                />
            <MenuItem 
                Header="Pack O_ptions" 
                Command="{Binding ConfigurationViewModel.OpenPackOptionsDialogCommand}" 
                InputGestureText="Ctrl+O" Icon="{fa:Icon Sliders}" 
                IsEnabled="{Binding IsEditMode}"
                />
        </MenuItem>
        <MenuItem Header="_View">
            <MenuItem 
                Header="_Play" 
                Command="{Binding ShowPlayerViewCommand}"
                InputGestureText="Ctrl+P" 
                Icon="{fa:Icon Play}"                
                IsEnabled="{Binding IsEditMode}"
                />
            <MenuItem 
                Header="_Edit Quiz" 
                Command="{Binding ShowConfigurationViewCommand}"
                InputGestureText="Ctrl+E" 
                Icon="{fa:Icon Gear}"   
                IsEnabled="{Binding IsPlayMode}"
                />
            <MenuItem 
                Header="_Fullscreen" 
                Command="{Binding ToggleFullScreenCommand}"
                InputGestureText="Alt+Enter" 
                Icon="{fa:Icon Expand}" 
                />
        </MenuItem>
        
    </Menu>
</UserControl>
