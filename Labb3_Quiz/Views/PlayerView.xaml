<UserControl x:Class="Labb3_Quiz.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_Quiz.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding PlayerViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock 
            Text="{Binding TimerText}"
            FontSize="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10"
            Grid.Column="1"
            />
        <TextBlock 
            Text="{Binding ActiveQuestion.Query}"
            FontSize="30"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            />

        <TextBlock 
            Text="{Binding FeedbackText}"
            Foreground="{Binding FeedbackColor}"
            FontWeight="Bold"
            FontSize="20"
            HorizontalAlignment="Center"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="0 5 0 5"
            />

        <TextBlock 
            Text="{Binding QuestionProgressText}"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            FontSize="18"
            />

        <Button 
            Content="{Binding AnswerOptions[0]}"
            Command="{Binding AnswerCommand}"
            CommandParameter="{Binding AnswerOptions[0]}"
            IsEnabled="{Binding CanAnswer}"
            Grid.Row="4"
            Width="250"
            Height="70"
            HorizontalAlignment="Right"
            Margin="20"
            />
        <Button 
            Content="{Binding AnswerOptions[1]}"
            Command="{Binding AnswerCommand}"
            CommandParameter="{Binding AnswerOptions[1]}"
            IsEnabled="{Binding CanAnswer}"
            Grid.Row="5"
            Width="250"
            Height="70"
            HorizontalAlignment="Right"
            Margin="20"
            />
        <Button 
            Content="{Binding AnswerOptions[2]}"
            Command="{Binding AnswerCommand}"
            CommandParameter="{Binding AnswerOptions[2]}"
            IsEnabled="{Binding CanAnswer}"
            Grid.Row="4"
            Grid.Column="1"
            Width="250"
            Height="70"
            HorizontalAlignment="Left"
            Margin="20"
            />
        <Button 
            Content="{Binding AnswerOptions[3]}"
            Command="{Binding AnswerCommand}"
            CommandParameter="{Binding AnswerOptions[3]}"
            IsEnabled="{Binding CanAnswer}"
            Grid.Row="5"
            Grid.Column="1"
            Width="250"
            Height="70"
            HorizontalAlignment="Left"
            Margin="20"
            />
    </Grid>
</UserControl>
