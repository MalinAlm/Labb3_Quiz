<UserControl x:Class="Labb3_Quiz.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_Quiz.Views"
             xmlns:conv="clr-namespace:Labb3_Quiz.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding PlayerViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
        <conv:AnswerToColorsConverter x:Key="AnswerToColorsConverter"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <!--QUIZ RESULT VIEW-->
        <Grid Visibility="{Binding QuizFinished, Converter={StaticResource VisibilityConverter}}">
            <StackPanel>

                <TextBlock 
            Text="Complete!"
            FontSize="34"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0 0 0 20"
            />

                <TextBlock 
            Text="{Binding ResultText}"
            FontSize="22"
            HorizontalAlignment="Center"
            Margin="0 0 0 30"
            />

                <Button 
            Content="Restart Quiz"
            Command="{Binding RestartCommand}"
            Width="150"
            Height="40"
            HorizontalAlignment="Center"
            />
            </StackPanel>
        </Grid>

        <!--QUIZ PLAY VIEW LAYOUT-->
        <Grid Visibility="{Binding QuizFinished, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        
            <TextBlock 
                Text="{Binding TimerText}"
                FontSize="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Grid.Column="1"
                />
            <TextBlock 
                Text="{Binding ActiveQuestion.Query}"
                FontSize="20"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                TextWrapping="Wrap"
                TextTrimming="None  "
                TextAlignment="Center"
                Margin="10"
                />

            <TextBlock 
                Text="{Binding FeedbackText}"
                Foreground="{Binding FeedbackColor}"
                FontWeight="Bold"
                FontSize="16"
                HorizontalAlignment="Center"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="0 1 0 1"
                />

            <TextBlock 
                Text="{Binding QuestionProgressText}"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                FontSize="18"
                />

            <Button 
                Command="{Binding AnswerCommand}"
                CommandParameter="{Binding AnswerOptions[0]}"
                IsHitTestVisible="{Binding CanAnswer}"
                Grid.Row="4"
                Width="250"
                Height="70"
                HorizontalAlignment="Right"
                Margin="20 10 20 20">
                <Button.Content>
                    <TextBlock
                        Text="{Binding AnswerOptions[0]}"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                </Button.Content>
                <Button.Background>
                    <MultiBinding Converter="{StaticResource AnswerToColorsConverter}">
                        <Binding Path="ClickedAnswer"/>
                        <Binding Path="AnswerOptions[0]"/>
                        <Binding Path="CorrectAnswer"/>
                    </MultiBinding>
                </Button.Background>
            </Button>
            <Button 
                Command="{Binding AnswerCommand}"
                CommandParameter="{Binding AnswerOptions[1]}"
                IsHitTestVisible="{Binding CanAnswer}"
                Grid.Row="5"
                Width="250"
                Height="70"
                HorizontalAlignment="Right"
                Margin="20 10 20 20">
                <Button.Content>
                    <TextBlock
                        Text="{Binding AnswerOptions[1]}"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                </Button.Content>
                <Button.Background>
                    <MultiBinding Converter="{StaticResource AnswerToColorsConverter}">
                        <Binding Path="ClickedAnswer"/>
                        <Binding Path="AnswerOptions[1]"/>
                        <Binding Path="CorrectAnswer"/>
                    </MultiBinding>
                </Button.Background>
            </Button>
            <Button 
                Command="{Binding AnswerCommand}"
                CommandParameter="{Binding AnswerOptions[2]}"
                IsHitTestVisible="{Binding CanAnswer}"
                Grid.Row="4"
                Grid.Column="1"
                Width="250"
                Height="70"
                HorizontalAlignment="Left"
                Margin="20 10 20 20">
                <Button.Content>
                    <TextBlock
                        Text="{Binding AnswerOptions[2]}"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                </Button.Content>
                <Button.Background>
                    <MultiBinding Converter="{StaticResource AnswerToColorsConverter}">
                        <Binding Path="ClickedAnswer"/>
                        <Binding Path="AnswerOptions[2]"/>
                        <Binding Path="CorrectAnswer"/>
                    </MultiBinding>
                </Button.Background>
            </Button>
            <Button 
                Command="{Binding AnswerCommand}"
                CommandParameter="{Binding AnswerOptions[3]}"
                IsHitTestVisible="{Binding CanAnswer}"
                Grid.Row="5"
                Grid.Column="1"
                Width="250"
                Height="70"
                HorizontalAlignment="Left"
                Margin="20 10 20 20">
                <Button.Content>
                    <TextBlock
                        Text="{Binding AnswerOptions[3]}"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                </Button.Content>
                <Button.Background>
                    <MultiBinding Converter="{StaticResource AnswerToColorsConverter}">
                        <Binding Path="ClickedAnswer"/>
                        <Binding Path="AnswerOptions[3]"/>
                        <Binding Path="CorrectAnswer"/>
                    </MultiBinding>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</UserControl>
