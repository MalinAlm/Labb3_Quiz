<Window x:Class="Labb3_Quiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_Quiz"
        xmlns:views="clr-namespace:Labb3_Quiz.Views"
        mc:Ignorable="d"
        d:Height="800" d:Width="400"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:MenuView DataContext="{Binding}" Grid.Row="0" />

        <views:ConfigurationView 
            Grid.Row="1" 
            DataContext="{Binding ConfigurationViewModel}"
            Visibility="{Binding DataContext.IsConfigurationViewVisible,RelativeSource={RelativeSource AncestorType=Window} ,Converter={StaticResource VisibilityConverter}}"
            />
        <views:PlayerView 
            Grid.Row="1" 
            DataContext="{Binding PlayerViewModel}"
            Visibility="{Binding DataContext.IsPlayerViewVisible, RelativeSource={RelativeSource AncestorType=Window},Converter={StaticResource VisibilityConverter}}"
            />

    </Grid>
</Window>
