<Window x:Class="Labb3_Quiz.Dialogs.ImportQuestionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_Quiz.Dialogs"
        mc:Ignorable="d"
        Title="Import Questions From Open Trivia" Height="320" Width="280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center">
            <Label Content="Category:" Margin="10 0"/>
            <ComboBox 
                x:Name="CategoryComboBox"
                Margin="10 0 10 0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center">
            <Label Content="Difficulty:" Margin="10 0"/>
            <ComboBox 
                x:Name="DifficultyCombobox"
                Margin="10 0 10 0" />
        </StackPanel>
    
        <Label 
            Grid.Row="2"
            Content="Number of questions:"
            Padding="0"
            Margin="10 20 0 0"/>
        <TextBlock 
            x:Name="AmountTextBlock"
            HorizontalAlignment="Right"
            Grid.Row="2"
            Grid.Column="1"
            Text="{Binding Value, ElementName=AmountSlider}" 
            Margin="0 20 10 0"/>
        <Slider 
            x:Name="AmountSlider"
            Grid.Row="2"
            VerticalAlignment="Bottom"
            Grid.ColumnSpan="2"
            Minimum="1"
            Maximum="20"
            TickFrequency="1"
            TickPlacement="BottomRight"
            Margin="10 5 10 5"/>    

        <Button 
            Grid.Row="3"
            Content="Cancel"
            Width="70"
            Height="30"
            Click="Cancel_Click"
            />
        <Button 
            Grid.Row="3"
            Grid.Column="1"
            Content="Import" 
            Width="70"
            Height="30"
            Click="Import_Click"
            />      
    </Grid>
</Window>
