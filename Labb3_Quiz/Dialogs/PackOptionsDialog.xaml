<Window x:Class="Labb3_Quiz.Dialogs.PackOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_Quiz.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Pack Options" Height="220" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10 0">
            <Label Content="Pack name:"/>
            <TextBox 
            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
            />
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10 0">
            <Label Content="Difficulty:"/>
            <ComboBox 
         Grid.Row="1" 
         ItemsSource="{Binding Difficulties}" 
         SelectedItem="{Binding Difficulty}" 
         />
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="10 10 5 0">

            <StackPanel Orientation="Horizontal">
                <Label FontWeight="Bold"  Padding="0" Content="Time limit:"/>
                <TextBlock HorizontalAlignment="Right" Text="{Binding TimeLimitÍnSeconds}" />
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="seconds" />
            </StackPanel>

            <Slider 
            Minimum="5"
            Maximum="120"
            Value="{Binding TimeLimitInSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TickFrequency="5"
                TickPlacement="BottomRight"
            IsSnapToTickEnabled="True"
            Margin="0 5 0 5"
            />
        </StackPanel>

    </Grid>
    
</Window>
