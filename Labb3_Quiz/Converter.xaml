<Window x:Class="Labb3_Quiz.Converter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Labb3_Quiz.Converters"
        xmlns:local="clr-namespace:Labb3_Quiz"

        mc:Ignorable="d"
        d:Height="800" d:Width="400"
        Title="Converter" Height="450" Width="800">

    <StackPanel>
        <StackPanel.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
            <converters:DoubleToSolidColorBrushConverter x:Key="DoubleToColorConverter" />
        </StackPanel.Resources>
        <Button 
            Content="Click here!"
            Click="Button_Click" 
            Margin="10 10 10 0" 
            Background="{
            Binding ElementName=MySlider,
            Path=Value,
            Converter={StaticResource DoubleToColorConverter}
            }"
            Width="{Binding ElementName=MySlider, Path=Value}" 
            Visibility="{
            Binding ElementName=ShowButtonCheckbox, 
            Path=IsChecked, 
            Converter={StaticResource BoolToVisibility}}" 
            
            />
        <CheckBox x:Name="ShowButtonCheckbox" Content="Show button" Margin="10 10 10 0" />
        <Slider 
            x:Name="MySlider"
            Margin="10 10 10 0"
            Minimum="0"
            Maximum="255"
            TickPlacement="BottomRight"
            TickFrequency="1"
            Foreground="Black"
            Value="120"
            IsSnapToTickEnabled="True"
            />
    </StackPanel>
</Window>
