<Application x:Class="Labb3_Quiz.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Labb3_Quiz"
             xmlns:views="clr-namespace:Labb3_Quiz.Views"
             xmlns:viewmodels="clr-namespace:Labb3_Quiz.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Label">
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <DataTemplate DataType="{x:Type viewmodels:PlayerViewModel}">
                <views:PlayerView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:ConfigurationViewModel}">
                <views:ConfigurationView />
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
